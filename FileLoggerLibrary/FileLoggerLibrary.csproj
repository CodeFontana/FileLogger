<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0-windows</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>disable</Nullable>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageId>CodeFoxtrot.FileLogger</PackageId>
		<Product>FileLogger</Product>
		<Authors>CodeFoxtrot</Authors>
		<Description>Simple ILogger implementation, providing asynchronous and configurable File and Console logging capabilities.</Description>
		<Copyright>2022</Copyright>
		<PackageProjectUrl>https://github.com/CodeFontana/FileLogger</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<RepositoryUrl>https://github.com/CodeFontana/FileLogger</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>CodeFoxtrot Logging Log FileLogger</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="6.0.1" />
	</ItemGroup>

</Project>
